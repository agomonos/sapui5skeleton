<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          controllerName="myapp.controller.Invoices">
    <Panel headerText="{locale>myapp.invoices.title}">
        <content>
            <Table
                id="invoicesTable"
                width="auto"
                items="{
			path : '/Invoices',
			sorter : {
				path : 'ShipperName',
				group : true
			}
		}"
                mode="MultiSelect"
                validationError="onInputError"
                validationSuccess="onInputSuccess"
                formatError="onFormatError"
                parseError="onParseError">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{locale>myapp.invoices.title}" />
                        <Button id="refreshListButton"
                                icon="sap-icon://refresh"
                                press="onPushRefreshInvoice"/>
                        <Button icon="sap-icon://save"
                                press="onPushSubmitChanges"/>
                        <ToolbarSpacer />
                        <SearchField width="50%"
                                     search="onFilterInvoices"
                                     selectOnFocus="false"/>
                        <Button icon="sap-icon://drop-down-list"
                                press="onPushSortDialog"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Label text="{locale>myapp.dialogInvoice.productName}"/>
                    </Column>
                    <Column>
                        <Label text="{locale>myapp.dialogInvoice.shipperName}"/>
                    </Column>
                    <Column>
                        <Label text="{locale>myapp.dialogInvoice.quantity}"/>
                    </Column>
                    <Column hAlign="Right">
                        <Label text="{locale>myapp.dialogInvoice.price}"/>
                    </Column>
                    <Column>
                        <Label text="{locale>myapp.dialogInvoice.status}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="invoicesTableitem">
                        <cells>
                            <Text text="{ProductName}"/>
                            <Text text="{ShipperName}"/>
                            <Input value="{ path: 'Quantity',
                                            type : 'sap.ui.model.odata.type.Int16',
                                            constraints : {
                                                            nullable: false
                                            }}"/>
                            <ObjectNumber number="{
					parts: [{path: 'ExtendedPrice'},
                                                {path: 'invoices>/InvoiceCurrency'}],
					type: 'sap.ui.model.type.Currency',
					formatOptions: {
						showMeasure: false
					}
                                    }"
                                          unit="{invoices>/InvoiceCurrency}"/>
                            <Text text="{ path: 'Status',
                                          formatter: '.formatter.statusText'
                                        }"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Toolbar>
                <Bar>
                    <contentLeft>
                        <Button icon="sap-icon://delete"
                                press="onPushDeleteRow" />
                    </contentLeft>
                    <contentRight>
                        <Button icon="sap-icon://add"
                                press="onPushAddRow" />
                    </contentRight>
                </Bar>
            </Toolbar>
        </content>
    </Panel>
</mvc:View>