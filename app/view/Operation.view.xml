<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          controllerName="myapp.controller.Operation">
    <Panel headerText="{locale>myapp.operation.title}">
        <content>
            <VBox>
                <Input value="{operation>/inputVal}"
                       description="{locale>myapp.operation.firstNumber}"
                       submit="onSubmitOperation" />
                <Input value="{operation>/inputVal2}"
                       description="{locale>myapp.operation.secondNumber}"
                       submit="onSubmitOperation" />
                <RadioButtonGroup select="onSubmitOperation"
                                  selectedIndex="{operation>/selected}"
                                  columns="2">
                    <RadioButton text="{locale>myapp.operation.multiply}"/>
                    <RadioButton text="{locale>myapp.operation.divide}"/>
                </RadioButtonGroup>
                <ObjectAttribute title="{locale>myapp.operation.result}"
                                                 text="{operation>/result}" />
            </VBox>
        </content>
    </Panel>
</mvc:View>