<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          controllerName="myapp.controller.Main">
    <Page title="{locale>myapp.main.title}">
        <headerContent>
            <Button icon="sap-icon://log" press="onAddPress" text="Uscita"
                    ariaLabelledBy="exitButtonLabel" class="sapUiSmallMarginEnd"/>
        </headerContent>
        <content>

            <Button text="{locale>myapp.main.gotoTmp}"
                    press="onToTmpPage"
                    class="sapUiSmallMarginEnd"/>

            <Input value="{main>/input}"
                   description="{locale>myapp.main.insert}"
                   submit="onInputSubmit"
                   width="50%"
                   valueLiveUpdate="true" />
            

            <HBox>
                <IconTabBar>
                    <items>
                        <IconTabFilter text="{locale>myapp.operation.title}">
                            <mvc:XMLView viewName="myapp.view.Operation"/>
                        </IconTabFilter>
                        <IconTabFilter text="{locale>myapp.string.title}">
                            <mvc:XMLView viewName="myapp.view.String"/>
                        </IconTabFilter>
                        <IconTabFilter text="{locale>myapp.invoices.title}">
                            <mvc:XMLView viewName="myapp.view.Invoices"/>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </HBox>
        </content>
    </Page>
</mvc:View>
